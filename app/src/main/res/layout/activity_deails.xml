<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="day.myfulishe.activity.Deails">


    <RelativeLayout
        android:id="@+id/LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/iv_goods_deails"
        android:layout_alignStart="@+id/iv_goods_deails"
        android:layout_alignRight="@+id/iv_goods_deails"
        android:layout_alignEnd="@+id/iv_goods_deails">

        <TextView
            android:id="@+id/tv_good_EnglishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文名"
            android:textSize="18dp"
            android:layout_below="@+id/tv_good_prize"
            android:layout_alignLeft="@+id/tv_good_deails_name"
            android:layout_alignStart="@+id/tv_good_deails_name" />

        <TextView
            android:id="@+id/tv_good_deails_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_good_EnglishName"
            android:layout_toLeftOf="@+id/tv_good_Color"
            android:layout_toStartOf="@+id/tv_good_Color"
            android:text="商品名"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_good_Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_good_EnglishName"
            android:layout_centerHorizontal="true"
            android:text="商品颜色"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv_good_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="#e40f0f"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_goods_deails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/goods_thumb" />

    <TextView
        android:id="@+id/tv_goods_dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_goods_deails" />

</RelativeLayout>
